{
  "name": "averias/phpredis-json",
  "description": "A PHP client for RedisJSON module using phpredis extension",
  "keywords": [
    "redis",
    "redisjson",
    "rejson",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Rafael Campoy Villalta",
      "email": "rafa.campoy@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-redis": "*",
    "ext-json": "*",
    "myclabs/php-enum": "^1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.5.0"
  },
  "autoload": {
    "psr-4": {
      "Averias\\RedisJson\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Averias\\RedisJson\\Tests\\": "tests"
    }
  },
  "config": {
    "optimize-autoloader": true
  },
  "scripts": {
    "manifest": [
      "@composer validate"
    ],
    "autoload": [
      "@composer dump-autoload --optimize"
    ],
    "run-tests": [
      "@manifest",
      "@autoload",
      "vendor/bin/phpunit"
    ],
    "git-reset": [
      "git reset --hard"
    ],
    "update-all": [
      "@composer self-update --no-interaction",
      "@composer update --optimize-autoloader --no-interaction"
    ]
  }
}